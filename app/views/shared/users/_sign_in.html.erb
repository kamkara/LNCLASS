<%= content_for @title="Se Connecter" %>

<div class="container">
<div class="col-12 col-md-4 col-lg-4 offset-md-4">
  <h2>Se Connectez</h2>

    <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
         class:"form-control",
         hide_label: true,
         placeholder:"NÂ° Matricule ou Email",
         class: "form-control" %>
      </div>

      <div class="field mt-1">
        <br />
        <%= f.password_field :password, autocomplete: "current-password",
           class:"form-control",
           hide_label: true,
           placeholder:"Mot de passe" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mt-2">
          <%= f.check_box :remember_me, %>

        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Se Connectez", class:"btn btn-primary" %>
      </div>
    <% end %>

  <%= render "devise/shared/links" %>
</div>

</div>

