
<div class="container" id="wrap">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">

    <span class="items-center">
      <legend>Inscription</legend>
      <h4 class="font-semibold">Inscrivez-vous gratuitement, C'est simple.</h4>
    </span>

      <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <!-- User first and last name-->

          <div class="col-xs-6 col-md-6 my-2">
            <%= f.text_field :first_name, class:"form-control input-lg",
            placeholder:"Nom :", autofocus: true, hide_label: true%>
          </div>
          <div class="col-xs-6 col-md-6 my-2">
            <%= f.text_field :last_name, class:"form-control  input-lg",
                placeholder:"Prénom :" , hide_label:true %>
          </div>
        </div>
          <!-- Matricule-->
        <%= f.text_field :matricule, class:"form-control input-lg",
        placeholder:"N° Matricule :", hide_label: true %>


          <!-- city-->
      <div class="options md:flex md:space-x-6 text-sm items-center text-gray-700 mt-4">
                  
        <p class="w-1/3  md:mb-0"> Ville: </p>
        <%= f.select :city, collection: User::CITY, 
        class:"w-1/3 border border-gray-200 p-2 focus:outline-none focus:border-gray-500" %>
    
      <!-- school name-->
      <p class="w-1/3  md:mb-0">Etablissement: </p>
      <%= f.select :school_name, collection: User::SCHOOL_NAME, 
      class:"w-1/3 border border-gray-200 p-2 focus:outline-none 
      focus:border-gray-500" %>

      <p class="w-1/3  md:mb-0">Niveau: </p>
      <%= f.select :level_id, @levels.map { |l| [l.title, l.id] },
              placeholder:"Niveau", hide_label: true, 
              class:"w-1/3 border border-gray-200 p-2 focus:outline-none focus:border-gray-500" %>
      
    </div>
    
    <!-- phone contact-->
      <%= f.phone_field :contact_phone, class:"form-control  input-lg my-2 ",
        placeholder:"N° téléphone :" %>
          <!-- class name-->
      <div class="" id="email_section">
        <%= f.email_field :email, class:"form-control input-lg ",
        placeholder:"Adresse email:",
        help:"Laissez le champs vide, si vous n'avez d'adresse email.",
         id:'' %>

        <!-- password section-->
        <%= f.password_field :password, class:"form-control  input-lg my-2 ",
        placeholder:"Mot de passe :", help:"6 caracteres minimuim" %>
        <%= f.password_field :password_confirmation, class:"form-control md:input-lg lg:input-lg my-2 ",
        placeholder:"Confirmez votre mot de passe :" %>

        <!-- phone contact-->
        <%= f.phone_field :contact_whatsapp, class:"form-control  input-lg my-2 ",
        placeholder:"N° téléphone WhatsApp :" %>
      </div>

        <!-- Corporate Msg-->
    <span class="help-block">
      En cliquant sur Créer mon compte, vous acceptez nos conditions et Nous vous accordons une semaine d'utilisation gratuite de la plateforme pour bien.
    </span>
    <div class="actions">
      <%= f.submit "Créer mon compte", class:"btn btn-lg btn-primary btn-block signup-btn" %>
    </div>
  <% end %>

    </div>
  </div>
</div>
