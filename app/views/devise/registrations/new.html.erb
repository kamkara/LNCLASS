<%= content_for @title="S'Inscrire" %>

<div class="container">
<div class="col-12 col-md-6 col-lg-8 offset-md-3">
<h2>Créer un Compte</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class=" mt-2">

    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>

  <div class="mt-2">

    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Mot de passe",class:"form-control" %>
    <br />
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

<div class="mt-2">
<%= f.text_field :username , placeholder:"Nom Complet", class:"form-control" %>
</div>
<div class="mt-2">
<%= f.text_field :memo, placeholder:"Memo", class:"form-control" %>
</div>
<div class="mt-2">
<%= f.text_field :contact, placeholder:"N° de tel", class:"form-control" %>
</div>
<div class="mt-2">
<%= f.text_field :role ,placeholder:"votre Role", class:"form-control" %>
</div>
<div class="mt-2">
<%= f.text_field :school_name, placeholder:"Nom de votre ecole", class:"form-control" %>
</div>

  <div class="actions my-2">
    <%= f.submit "S'Inscrire", class:"btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>

