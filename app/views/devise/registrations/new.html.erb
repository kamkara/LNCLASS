<div class="container" id="wrap">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row">
          <div class="col-xs-6 col-md-6 my-2">
            <%= f.text_field :first_name, class:"form-control input-lg",
            placeholder:"Nom:", autofocus: true %>
          </div>
          <div class="col-xs-6 col-md-6">
            <%= f.text_field :last_name, class:"form-control  input-lg",
                placeholder:"Prénom:" %>
          </div>
        </div>
          <!-- Matricule-->
        <%= f.text_field :matricule, class:"form-control input-lg",
        placeholder:"N° Matricule:" %>
          <!-- phone contact-->
        <%= f.phone_field :contact, class:"form-control  input-lg my-2 ",
        placeholder:"N°Tel:" %>
        <%= f.email_field :email, class:"form-control input-lg ",
        placeholder:"Adresse email:,",
        help:"Laissez le champs vide, si vous n'avez d'adresse email." %>
        <%= f.text_field :city, class:"form-control input-lg input-lg  my-2 ",
        placeholder:"Ville:" %>
          <!-- password section-->

        <%= f.password_field :password, class:"form-control  input-lg my-2 ",
        placeholder:"Mot de passe:", help:"6 caracteres minimuim" %>
        <%= f.password_field :password_confirmation, class:"form-control md:input-lg lg:input-lg my-2 ",
        placeholder:"Confirmez votre mot de passe:" %>

          <div class="form-group">
      <%= f.label :"date de Naissance" %><br />
      <%= f.date_field :birthday, class: "form-control" %>
    </div>

    <div class="form-group my-2">
      <div class="radio-inline">
        <%= f.label :Femme %>
        <%= f.radio_button :gender, "female", checked: true %>

      </div>

      <div class="radio-inline">
        <%= f.label :Homme %>
        <%= f.radio_button :gender, "male"  %>
      </div>

    </div>
        <!-- Corporate Msg-->
        <span class="help-block">En cliquant sur Créer mon compte, vous acceptez nos conditions et que vous avez lu notre politique d'utilisation des données, y compris notre utilisation des cookies.</span>
       <div class="actions">
          <%= f.submit "Créer mon compte", class:"btn btn-lg btn-primary btn-block signup-btn" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
